<%= form_with model: @user do |f| %>

<h2>User info</h2>
<div>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :profile_image %><br>
  <%= f.file_field :profile_image, accept: "image/*" %>
</div>
<div>
  <%= f.label :introduction %><br>
  <%= f.text_field :introduction %>
</div>

<div>
  <%= f.submit 'Update User' %>
</div>

<% end %>