<main>
<div class="container">
  <div class="row">
    <div class="col-md-3">

  <div class="sideber">
    <%= render 'users/info', user: @user, book: @newbook %>
  </div>
  </div>




  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user) do%>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title , book_path(@book.id) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <%= link_to edit_book_path, class:"btn btn-sm btn-success edit_book" do %>
            Edit
            <% end %>
          </td>
          <td>
            <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" , class: "btn btn-sm btn-danger destroy_book_145229", rel: "nofollow" %>
          </td>
        </tr>
      </tbody>
    </table>


    </div>
  </div>
</div>
</main>
