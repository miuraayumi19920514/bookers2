  <h2>User info</h2>
  
    <%= image_tag user.get_profile_image(100,100) %>
    
    <table class="table">
    <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    
    </tbody>
    </table>
  
  
  
  
  
  
  
  <div>
    <%= link_to "edit" , edit_user_path(current_user.id) %>
  </div>
  
  <h1>New book</h1>

  <%= form_with model: book, url: '/books', method: :post do |f| %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  
  <div>
    <%= f.submit 'Create Book' %>
  </div>
  
  <% end %>