<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      
    <% if @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
    
      
    <h1>Editing Book</h1>
    <%= form_with model: @book do |f| %>
  
    <div class="form-group">
      <%= f.label :Title %><br>
      <%= f.text_field :title %>
    </div>
    
    <div class="form-group">
      <%= f.label :Opinion %><br>
      <%= f.text_area :body %>
    </div>
    
    <div class="form-group">
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
    </div>

      <%= link_to "Show", book_path(@book) ,class:"book_145257" %> |
      <%= link_to "Back", books_path ,class:"back" %>
    <% end %>
    
      </div>
    </div>
  </div>
</main>