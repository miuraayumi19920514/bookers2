<main>
  <div class="sideber">
    <%= render 'info', book: @book, user: @user%>
  </div>

  <section class="mainright">
    <h2>Books</h2>
    <div class="usershow">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title ,book_path(book.id)%></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </section>

</main>