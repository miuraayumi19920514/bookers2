<main>
  <div class="sideber">
    <%= render 'users/info', user: @user, book: @book %>
  </div>

  <section class="mainright">
    <h2>Books</h2>
    <div class="bookindex">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>画像</td>
          <td><%= link_to book.title ,book_path(book.id)%></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </section>

</main>